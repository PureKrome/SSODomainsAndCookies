@model WebApplication.Models.IndexViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <title>SSO Domain Cookie check.</title>
    </head>
    <body>
        <div>
            
            @if (Model != null && Model.Message != null)
            {
                <h1>Message</h1>
                <font color="red">@Model.Message</font>
                <br/>
                if (Model.OtherCookie != null)
                {
                    @Html.DisplayFor(model => model.OtherCookie)   
                }
            }


            <h1>Enter cookie data.</h1>
            @using (Html.BeginForm())
            {
                <input type="text" name="cookieData" value="Hello World"/>
                <input type="submit" value="Create Cookie"/>
            }
            
            <hr/>
            
            <h1>View other domain cookie data.</h1>
            @if (Model != null && Model.ThisCookie != null)
            {
                @Html.DisplayFor(model => model.ThisCookie)   
            }
        </div>
    </body>
</html>